<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_white_fill_top_corner_30"
    tools:context=".presentation.ui.bid.chat.ChatFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="32dp">

        <View
            android:id="@+id/v_line"
            android:layout_width="92dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            android:backgroundTint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_bid_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/yeay_you_succeed_got_fit_price"
            android:textColor="@color/black"
            android:textSize="@dimen/subtitle"
            app:layout_constraintTop_toBottomOf="@id/v_line" />

        <TextView
            android:id="@+id/tv_bid_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/immediately_contact"
            android:textColor="@color/black"
            android:textSize="@dimen/sub_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bid_title" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bid_desc"
            app:strokeColor="@color/gray_shade"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/siv_profile_user"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tv_name_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content"
                    app:layout_constraintBottom_toTopOf="@+id/tv_location_user"
                    app:layout_constraintStart_toEndOf="@id/siv_profile_user"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/seller_name" />

                <TextView
                    android:id="@+id/tv_location_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/content"
                    app:layout_constraintBottom_toBottomOf="@id/siv_profile_user"
                    app:layout_constraintStart_toEndOf="@id/siv_profile_user"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name_user"
                    tools:text="@string/city" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/siv_image_product"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/product_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/siv_profile_user" />

                <TextView
                    android:id="@+id/tv_name_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/siv_image_product"
                    app:layout_constraintTop_toTopOf="@id/siv_image_product"
                    tools:text="Short Dress" />

                <TextView
                    android:id="@+id/tv_base_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:textSize="@dimen/sub_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_name_product"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_product"
                    tools:text="Rp 150.000" />

                <TextView
                    android:id="@+id/tv_price_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_base_price"
                    app:layout_constraintTop_toBottomOf="@id/tv_base_price"
                    tools:text="Ditawar Rp 120.000" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingBottom="48dp"
            app:layout_constraintTop_toBottomOf="@id/mcv_product">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_chat_buyer"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:backgroundTint="@color/primary"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/calling_via_whatsapp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/caption"
                app:cornerRadius="6dp"
                app:icon="@drawable/ic_whatsapp"
                app:iconGravity="textStart"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>