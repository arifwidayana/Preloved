<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_white_fill_top_corner_30"
    tools:context=".presentation.ui.bid.status.StatusFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="32dp">

        <View
            android:id="@+id/v_line"
            android:layout_width="92dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            android:backgroundTint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/update_status"
            android:textColor="@color/black"
            android:textSize="@dimen/content"
            app:layout_constraintTop_toBottomOf="@id/v_line" />

        <RadioGroup
            android:id="@+id/rg_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_status">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_accepted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/sold"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_content"
                android:theme="@style/Theme.Preloved" />

            <TextView
                android:id="@+id/tv_subtitle_accepted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="32dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/accepted_product"
                android:textSize="@dimen/sub_content" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_declined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/transaction_cancelled"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_content"
                android:theme="@style/Theme.Preloved" />

            <TextView
                android:id="@+id/tv_subtitle_declined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="32dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/declined_product"
                android:textSize="@dimen/sub_content" />

        </RadioGroup>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="154dp"
            android:paddingBottom="26dp"
            app:layout_constraintTop_toBottomOf="@id/rg_status">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_chat_buyer"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:enabled="false"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/change_status"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/caption"
                android:theme="@style/Theme.Preloved"
                app:cornerRadius="6dp"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>